project-avatar-size = 42px

.projects
  clear: both
  display: inline-block
  width: 100%
  vertical-align: top
  border-radius: 5px
  padding: 16px
  
  a
    color: primary
    text-decoration: none
    &:hover
      text-decoration: underline

  header
    float: left
    width: 22%
    @media (max-width: hugeViewport)
      width: 21%

  .placeholder
    margin-top: 12px
    .psst
      width: 50px
      display: inline-block
      vertical-align: middle
      margin-right: .5rem
    p
      display: inline-block
      vertical-align: bottom
    
  .collection
    padding-bottom: 0
    margin-top: 0
    margin-right: 3%
    @media (max-width: 800px)
      float: none
      width: initial
      width: 100%
      .collection-description
        max-width: initial

  .collection-name
    h2
      margin-top: 0
    .arrow
      margin-left: 5px

  .collection-image-container
    display: block
    .collection-image
      display: inline-block

  .collection-description
    font-size: 14px
    margin-bottom: 0

.projects,
.search-results
  .projects-container
    margin: 0
    padding: 0
    list-style-type: none

    > li
      float: left
      display: block
      margin-right: 10px
      width: calc(33.3% - 10px)
      position: relative
      margin-bottom: 12px
      
      @media (max-width: mediumViewport)
        width: 100%
      
    a
      &:hover
        text-decoration: none
      
    .down-arrow
      margin: 0
    
   .project-options-pop-btn
     display: block
     top: -40px
       
  .project
    margin-top: 6px
    font-size: 0.9rem
    background-color: section-line
    border-bottom-color: section-line
    border-radius: 5px
    width: 100%
    padding: 12px
    padding-bottom: 1.5rem
    height: 150px
    position: relative
    transition: 0.1s all
    cursor: pointer
    overflow: visible
    &:after
    	top: -13px
    	left: 8.5px
    	border: solid transparent
    	content: " "
    	height: 0
    	width: 0
    	position: absolute
    	pointer-events: none
    	border-bottom-color: inherit
    	border-width: 7px
    @media (max-width: mediumViewport)
      height: auto

    a
      color: primary

    .project-container
      overflow: hidden
      height: calc(100% + 12px)

    .avatar
      border-radius: 5px
      margin-right: 7px
      vertical-align: top
      display: inline
      width: project-avatar-size
      height: project-avatar-size

    .button
      max-width: "calc(100% - %s - 11px)" % project-avatar-size
      vertical-align: -13px

    .project-name
      display: inline-block
    
    .description
      margin-top: 12px
      max-width: 92%
      margin-left: 15px

    .overflow-mask
      position: absolute
      width: 100%
      bottom: 0
      left: 0
      height: 12px
      opacity: .6
      border-bottom-left-radius: 5px
      border-bottom-right-radius: 5px
      background-color: section-line

    .private-project-badge
      display: none

    &.private-project
      background-color: private
      border-bottom-color: private
      .overflow-mask
        background-color: private
      .private-project-badge
        display: inline-block

.project-badge
  display: inline-block
  width: 22px
  height: 20px
  margin-right: 4px
  border-radius: 3px
  background-position: center
  background-repeat: no-repeat
  vertical-align: middle
  &.private-project-badge
    background-color: private
    background-image: url('https://cdn.glitch.com/f7224274-1330-4022-a8f2-8ae09dbd68a8%2Fprivate.svg?1496253541539')
  &.public-project-badge
    opacity: 0.7
    background-image: url('https://cdn.glitch.com/26aa7be9-76e2-4f1c-a3e4-6a41ddcec98f%2Fpublic.svg?1528830915543')

.search-results,
.user-page,
.team-page,
.category-page
  .category
    float: none
    width: initial

.project-options
  display: none
  position: absolute
  right: 0px
  top: 4px
  padding: 10px
  padding-bottom: 8px
  background-color: white
  border-radius: 5px
  border: 0
  z-index: 1
  &:focus
    outline: transparent
    background: #efefef

.user-page .projects-container > li
  // Permit a 2-column layout on the user-page
  // in between mediumViewport and largeViewport
  @media (max-width: largeViewport)
    width: 48%
        
  @media (max-width: mediumViewport)
    width: 100%
