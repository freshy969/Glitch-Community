defaultCover = "https://cdn.gomix.com/2bdfb3f8-05ef-4035-a06e-2043962a3a13%2Fdefault-cover.svg"

pop-shadow = 0px 2px 5px 0px rgba(0,0,0,0.27), 0px 1px 1px 0px rgba(0,0,0,0.15)

details.overlay-container
  display: inline-block
  > summary
    list-style: none
    &::-webkit-details-marker
      display: none
    &::before
      display: none
  &[open] > summary::after
    content: ''
  &:not([open]) > :not(summary)
    display: none

details.overlay-container[open] > summary::after
.overlay-background
    // overflow: scroll
    overflow-x: auto
    -webkit-overflow-scrolling: touch
    background-color: overlay-background
    width: 100%
    height: 100%
    position: fixed
    top: 0
    left: 0
    z-index: 10
    cursor: default

dialog.overlay
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  background-color: primary-background
  color: primary
  border: 2px primary solid
  border-radius: 5px
  max-width: 640px
  width: 94%
  max-height: 85%
  height: initial
  overflow-y: auto
  display: block
  position: fixed
  left: 50%
  transform: translateX(-50%)
  top: 6.5%
  padding: 0
  margin: 0
  box-shadow: pop-shadow
  z-index: 15
  &:focus
    outline: transparent
  // .user-names
  //   display: none
  .users,
  .project-users
    margin-top: 0

  section
    padding: 12px
    padding-top: 14px
    padding-bottom: 14px
  .pop-over-actions
    margin: 0
    border-bottom: 1px solid secondary
    position: relative
  .avatar-container // TODO tbv
    vertical-align: middle
    margin-right: 5px
  .overlay-title
    font-weight: bold
    display: inline-block
  a
    color: general-link
    // &:hover
    //   text-decoration: none
  .has-buttons
    padding-bottom: 0
    button,
    .button
      margin-bottom: 14px
      margin-right: 0.5rem
  
  &.overlay-narrow
    max-width: 460px
    left: 0px
    margin: 0 auto
    transform: initial

  // wistia embed styling
  .wistia_responsive_padding
    padding: 56.25% 0 0 0
    position: relative

  .wistia_responsive_wrapper
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%

  .wistia_embed
    height: 100%
    width: 100%
  .button
    display: inline