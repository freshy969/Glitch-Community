.results-list
  overflow-y: auto
  max-height: 357px
  font-weight: normal
  
  .results
    margin: 0
    padding-left: 0

    a:hover
      text-decoration: none

    li
      position: relative
      list-style-type: none
      
    .result
      display: block
      width: 100%
      position: relative
      text-decoration: none
      &:hover,
      &.hover,
      &:focus,
      &.active
        background-color: general-link
        a
          color: primary-background
    .result-user
      .avatar // TODO tbv
        float: left
      .result-info
        width: 68%
        float: left
    .result-project, .result-collection
      display: flex
      width: 100%
      .avatar-container // TODO tbv
        border-radius: 3px
      &.private
        background-color: private
      &.private:hover
        background-color: general-link
    .view-result-link
      position: absolute
      right: 1em
      top: 1em
      z-index: 1

      button
        width: 65px     
    .results-info
      margin-right: 10px
      width: 57%
      img
        margin-top: 6px
        width: 22px
        height: 22px

  a:last-child .result
    border-bottom: none
      
  .result
    list-style-type: none
    cursor: pointer
    border-bottom: 1px solid section-line
    padding: 6px
    padding-top: 12px
    padding-bottom: 12px
    &:hover,
    &.hover,
    &:focus,
    &.active
      border-radius: 3px
      color: primary-background
      .result-description, p
        color: secondary-hover-on-color
      .result-name
        color: primary-background
  .result-name
    display: block
    vertical-align: middle
    max-width: calc(100% - 22px - 5px) // space for the avatar
    line-height: 16px
    color: primary
  
  .result-description
    color: text-on-secondary-background
    word-break: break-word
    font-family: monospace
    font-size: 12px
    line-height: 18px
    padding-top: 5px
  
  .thanks
    .emoji
      width: 14px
      height: 14px
    font-size: 12px
    margin-top: 5px
    margin-bottom: 0

  .avatar-container // TODO tbv
    margin-right: 15px
    display: inline-block
    vertical-align: middle
    width: 35px
    height: 35px
    border-radius: 50%
    svg
      width: 100%
      height: auto
  .whitelisted-domain
    vertical-align: middle
    margin-bottom: 5px
    margin-right: 5px

  .users
    user-size = 18px
    height: user-size
    display: block
    margin: 0
    margin-top: 6px
    min-height: initial

    > li
      margin-left: 3px
    
    .user
      width: user-size
      height: user-size
      img
        width: user-size
        height: user-size
        border-radius: 50%
      
      


    