.user-page, .team-page
  // permit a 2-column layout on user and team pages
  // in-between mediumViewport and largeViewport
  .projects-container,
  .collections-container
    row-gap: 1.5rem
    @media (min-width: mediumViewport)
      grid-template-columns: 1fr 1fr

    @media (min-width: largeViewport)
      grid-template-columns: 1fr 1fr 1fr

  .glitch-embed-wrap
    width: 100%
    height: 500px
    iframe
      width: 100%
      height: 100%
      border: none
      
  .projects, .collections
    padding: 0
    margin-bottom: 1.5rem
    overflow: visible
    display: inline-block
    
    &.filtering
      min-height

    .project-options
      display: block
      
.team-page
  section
    position: relative
    
  .team-url
    color: text-on-secondary-background
    font-weight: 600
  
  .user-avatar
    border-radius: 5px 
    
  .users-information
    padding-bottom: 12px
    .users
      display: inline
    .user
      img.whitelisted-domain
        margin: auto
      
  .add-project-container
    position: relative

  .whitelisted-domain-container
    vertical-align: top
    margin-top: 5px
    margin-right: 5px
    margin-left: 5px

  .add-user-container
    position: relative
    vertical-align: top
    margin-left: 5px
    .users
      li:last-of-type
        margin-right: 0px
      img
        opacity: 0.5
    .add-user-wrap
      position: relative
    .add-user
      margin-top: 4px
      transition: all .2s
    .success
      background-color: success-background
      
  .join-team-button
    vertical-align: top
    margin-top: 3px
    
  .beta
    display: inline-flex
    background-color: beta
    font-size: 12px
    font-weight: bold
    padding: 6px 12px
    padding-bottom: 2px
    user-select: none
    border-radius: 5px
    margin-bottom: 10px
    a
      display: flex
      flex-direction: row
      text-decoration: none
    img
      padding-right: 10px
      height: 30px
    h4
      color: primary
      margin: 2px 0
    p
      margin-top: -5px
      margin-bottom: 0px 
      font-size: smaller
  .beta:hover 
    p
      text-decoration: underline
  
  .placeholder-mask
    position: absolute
    top: 25px
    left: 0
    right: 0
    bottom: 0
    background: linear-gradient(to bottom, rgba(255,255,255,0.2), white)
    pointer-events: none
    
  .team-marketing
    border-top: 1px solid #e5e5e5
    padding-top: 1rem

.clear-session
  position: absolute
  top: 16px
  right: 16px