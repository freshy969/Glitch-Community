@require '../constants'

.header
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 13px
  @media (max-width: smallViewport)
    flex-wrap: wrap
    label
      flex: 100%
      margin-bottom: 15px
      
.viewControls
  display: flex
  justify-content: space-between

// hide pagination controls on mobile
.paginationControls
  @media (max-width: mediumViewport)
    display: none
    
.paginationArrow
  margin-bottom: 2px
  &.next
    transform: rotate(180deg)
    
.pageNumbers
  // needs to be static width to so next button doesn't jump around when page changes
  width: 60px
  display: inline-block
  text-align: center
  color: tertiary
  font-size: 14px

.filterResultsPlaceholder
  display: flex
  align-items: center
  img
    width: 60px
    margin-right: 15px

.sortableProjectContainer
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 15px;
    


.sortableProjectItem
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: #fff;
  border: 1px solid #efefef;