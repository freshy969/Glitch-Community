.teamUserWrap
  margin-right: -7px
  &.lastTeamUser
    margin-right: 0
    
.addUserWrap
  margin-left: 5px  
  :global .success
    background-color: success-background
  
.addUser
  transition: all .2s
    
.container
  margin: 0
  padding: 0
  list-style-type: none
  display: flex
  flex-flow: row wrap
  align-items: center
  
  :global
    .whitelisted-domain-container
      vertical-align: top
      margin-top: 5px
      margin-right: 5px
      margin-left: 5px
        
    .join-team-button
      vertical-align: top
      margin-top: 3px
    // team-elements
    .whitelisted-domain
      display: inline-block
      width: 22px
      height: 22px
    div.whitelisted-domain
      display: inline-flex
      justify-content: center
      align-items: center
      background-color: line-on-secondary-background
      font-size: 13px
      font-weight: 600
      color: white
      border-radius: 3px
    img.whitelisted-domain
      object-fit: contain
      margin: auto