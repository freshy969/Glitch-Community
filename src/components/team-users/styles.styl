.users
  display: inline
  margin-right: 5px
  padding: 1px 0 0;
  vertical-align: middle
  
.teamUserWrap
  margin-right: -7px

.teamUserWrap + :not(.teamUserWrap)
  margin-left: 7px
  
.container
  margin: 0
  padding: 0
  list-style-type: none
  display: flex
  flex-flow: row wrap
  align-items: center
  
  :global
    .whitelisted-domain-container
      vertical-align: top
      margin-top: 5px
      margin-right: 5px
      margin-left: 5px
    .add-user-container
      position: relative
      vertical-align: top
      margin-left: 5px
      .users
        li:last-of-type
          margin-right: 0px
        img
          opacity: 0.5
      .add-user-wrap
        position: relative
      .add-user
        margin-top: 4px
        transition: all .2s
      .success
        background-color: success-background
    .join-team-button
      vertical-align: top
      margin-top: 3px
    // team-elements
    .whitelisted-domain
      display: inline-block
      width: 22px
      height: 22px
    div.whitelisted-domain
      display: inline-flex
      justify-content: center
      align-items: center
      background-color: line-on-secondary-background
      font-size: 13px
      font-weight: 600
      color: white
      border-radius: 3px
    img.whitelisted-domain
      object-fit: contain
      margin: auto