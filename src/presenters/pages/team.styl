@import  "../../components/constants"

.container :global
  // projects-list
  .projects
    padding: 0
    margin-bottom: 1rem
    display: inline-block
  .projects-container
    margin-bottom: 1rem
  // collections-list
  .collections
    padding: 0
  // permit a 2-column layout on user and team pages	
  // in-between mediumViewport and largeViewport	
  .projects-container,	
  .collections-container	
    row-gap: 1.5rem	
    @media (min-width: mediumViewport)	
      grid-template-columns: 1fr 1fr	

     @media (min-width: largeViewport)	
      grid-template-columns: 1fr 1fr 1fr	

  // add-team-project
  .add-project-container
    position: relative
  // team-analytics
  .placeholder-mask
    position: absolute
    top: 25px
    left: 0
    right: 0
    bottom: 0
    background: linear-gradient(to bottom, rgba(255,255,255,0.2), white)
    pointer-events: none
  // team-elements
  .team-marketing
    border-top: 1px solid #e5e5e5
    padding-top: 1rem
    
.teamUrl
  color: text-on-secondary-background
  font-weight: 600

.beta
  display: inline-flex
  background-color: beta
  font-size: 12px
  font-weight: bold
  padding: 6px 12px
  padding-bottom: 2px
  user-select: none
  border-radius: 5px
  margin-bottom: 10px
  img
    padding-right: 10px
    height: 30px
  h4
    color: primary
    margin: 2px 0
  p
    margin-top: -5px
    margin-bottom: 0px 
    font-size: smaller
  &:hover
    text-decoration: underline
    
.usersInformation
  padding-bottom: 12px
  